# ===== Activo / Timeframe =====
SYMBOL=ETHUSDT.P
INTERVAL=5m

# IMPORTANTE: el script usa LIMIT (en inglés). Mantengo tu LIMITE como alias por compatibilidad.
LIMIT=1500
LIMITE=1500

# ===== Zona horaria (para timestamps legibles y consistentes en AR) =====
TZ=America/Argentina/Buenos_Aires

# ===== API Binance USDⓈ-M Futures =====
# El script usa BINANCE_UM_BASE_URL; mantengo BASE_URL como alias por compatibilidad.
BINANCE_UM_BASE_URL=https://fapi.binance.com
BASE_URL=https://fapi.binance.com

# ===== Range Breakout (igual al Pine) =====
RB_MULTI=4.0                # Channel Width multiplier (multi del ATR suavizado)
RB_LB=10                    # lookback para filtro de señales (low[10]/high[10])
RB_FILTER_TREND=false       # en el original está apagado

# ===== Salida / UI =====
CSV_PATH=stream_table.csv   # tabla de salida (una fila por vela CERRADA)
SHOW_ON_START=0             # 0: no abre gráfico (recomendado para loop en Windows)
SAVEFIG=                    # ruta opcional para PNG (vacío = no guardar)
SLEEP_FALLBACK=10           # espera ante errores/transitorios de red

# ===== Loop / ejecución =====
RUN_LOOP=true               # informativo; el script ya corre en loop
REFRESH_JITTER_SEC=2        # informativo; no lo usa el script actual

# ===== Fuente de precio / des-spike (NO usados por el script actual)
PRICE_SOURCE=INDEX          # LAST | MARK | INDEX  (no-impacto hoy)
DESPIKE_WITH_MARK=true      # solo aplicaría si PRICE_SOURCE=LAST (no-impacto hoy)
BAND_PCT=1.0                # ±% vs mark para recortar mechazos (no-impacto hoy)
